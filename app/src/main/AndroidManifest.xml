            android:name=".NewRealMailActivity"
            android:exported="true"
            android:theme="@style/Theme.RealMail.NoActionBar" />
        <activity
            android:name=".ModifyPersonalInfo"
            android:exported="true"
            android:theme="@style/Theme.RealMail.NoActionBar" />
        <activity
            android:name=".AddressBookActivity"
            android:exported="true"
            android:theme="@style/Theme.RealMail.NoActionBar" />
