<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_text_white"
        android:orientation="vertical"
        android:elevation="8dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">

            <RelativeLayout
                android:id="@+id/btn_category_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人空间"
                    android:textColor="@color/title_black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_option_white"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="14dp"
                android:elevation="3dp">
                <ImageView
                    android:id="@+id/iv_head_icon"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/default_head_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="20dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_neck_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_head_icon"
                    android:text="喜欢吃干脆面的糖"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_flag_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RealMail ID: "
                    android:textColor="@color/colorTextGray"
                    android:layout_below="@id/tv_neck_name"
                    android:layout_toRightOf="@id/iv_head_icon"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shanliao"
                    android:textColor="@color/colorTextGray"
                    android:layout_below="@id/tv_neck_name"
                    android:layout_toRightOf="@id/tv_flag_user_id"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_collect_mail_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_option_white"
                android:elevation="3dp">
                <TextView
                    android:id="@+id/tv_flag_slogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="个性签名"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginVertical="20dp"/>

                <TextView
                    android:id="@+id/tv_slogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What can I do for you ?What can I do for you ?What can I do for you ?"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:maxWidth="230dp"
                    android:layout_marginVertical="20dp"/>

                <View
                    android:id="@+id/view_dl_1"
                    android:layout_below="@id/tv_slogan"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/input_gray"/>

                <TextView
                    android:id="@+id/tv_flag_birthday"
                    android:layout_below="@id/view_dl_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="生日"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginVertical="20dp"/>

                <TextView
                    android:id="@+id/tv_birthday_date"
                    android:layout_below="@id/view_dl_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023年3月17日"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:layout_marginVertical="20dp"/>

                <View
                    android:id="@+id/view_dl_2"
                    android:layout_below="@id/tv_flag_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/input_gray"/>

                <TextView
                    android:id="@+id/tv_flag_receive_time"
                    android:layout_below="@id/view_dl_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="信件接收时间"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginVertical="20dp"/>

                <TextView
                    android:id="@+id/tv_receive_time"
                    android:layout_below="@id/view_dl_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每天 05:20"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:layout_marginVertical="20dp"/>

                <View
                    android:id="@+id/view_dl_3"
                    android:layout_below="@id/tv_flag_receive_time"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/input_gray"/>

                <TextView
                    android:id="@+id/tv_flag_sign_time"
                    android:layout_below="@id/view_dl_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="注册时间"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginVertical="20dp"/>

                <TextView
                    android:id="@+id/tv_sign_time"
                    android:layout_below="@id/view_dl_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2001年4月19日 05:20"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:layout_marginVertical="20dp"/>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="20dp"
                android:elevation="3dp">

                <work.tangthinker.realmail.special.RectangleImageView
                    android:id="@+id/iv_space_image"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_space_background"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_send_mail_to"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_blue"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/tv_send_mail_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="写封信给她"
                    android:textColor="@color/bg_text_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_add_to_address_book"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_blue"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/tv_add_or_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="添加到邮友录"
                    android:textColor="@color/bg_text_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            
            
            
        </LinearLayout>
    </ScrollView>









    
    
    







</LinearLayout>