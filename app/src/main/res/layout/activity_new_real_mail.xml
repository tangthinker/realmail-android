<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="wrap_content"
     android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_text_white"
            android:orientation="vertical"
            android:elevation="8dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divide_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">

                <RelativeLayout
                    android:id="@+id/btn_category_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="写信"
                        android:textColor="@color/title_black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="19sp"/>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_access_flag"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_option_white"
            android:elevation="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="信件类型"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_access_flag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_access_flag_right"
                android:text="私密"
                android:layout_marginTop="17.5dp"
                android:textSize="15sp"
                android:textColor="@color/button_blue"
                android:layout_marginRight="8dp"
                />

            <Button
                android:id="@+id/btn_access_flag_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/pointer_to_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_receive_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_option_white"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="15dp"
            android:elevation="3dp"
            >

            <ImageView
                android:id="@+id/iv_head_icon"
                android:layout_gravity="center_vertical"
                android:layout_width="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:layout_height="45dp"
                android:layout_marginVertical="10dp"
                android:background="@color/white"/>

            <EditText
                android:id="@+id/et_receive_user_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="收信人 RealMail ID"
                android:inputType="textVisiblePassword"
                android:paddingHorizontal="20dp"
                android:maxLines="1"
                />


        </RelativeLayout>



        <EditText
            android:id="@+id/et_mail_payload"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="@drawable/bg_option_white"
            android:layout_marginHorizontal="16dp"
            android:elevation="2dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="10dp"
            android:hint="写下你想说的话. . ."
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:gravity="left|top"
            android:padding="15dp"
            android:isScrollContainer="true"
            android:scrollbarSize="1dp"
            android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/rl_time_setting"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_option_white"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="送达时间"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_receive_time_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.5dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/btn_time_setting_right"
                android:text="2023年3月09日 12:21"
                android:textColor="@color/button_blue"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_time_setting_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/pointer_to_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_send_real_mail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_blue"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发送"
                android:textColor="@color/bg_text_white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

    </LinearLayout>
</ScrollView>
