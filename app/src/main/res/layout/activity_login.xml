<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_text_white"
        android:orientation="vertical"
        android:elevation="8dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">

            <RelativeLayout
                android:id="@+id/btn_category_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录到RealMail"
                    android:textColor="@color/title_black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="19sp"/>


            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_user_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_input"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="15dp"
            android:elevation="8dp"
            android:hint="RealMail ID"
            android:inputType="textVisiblePassword"
            android:paddingHorizontal="20dp"
            android:maxLines="1"

            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_input"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="15dp"
            android:elevation="8dp"
            android:inputType="textPassword"
            android:hint="密码"
            android:paddingHorizontal="20dp"
            android:maxLines="1"
            />




    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tv_lost_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/text_btn"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="22dp"
            android:background="@color/input_gray"
            android:layout_toLeftOf="@id/tv_lost_pwd"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>


        <TextView
            android:layout_toLeftOf="@id/tv_lost_pwd"
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册RealMail ID"
            android:textColor="@color/text_btn"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginRight="20dp"/>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_blue"
        android:elevation="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="@color/bg_text_white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>