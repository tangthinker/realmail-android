<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_mail_item"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="8dp"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_send_neck_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喜欢吃干脆面的糖"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"/>


            <View
                android:id="@+id/view_dl_1"
                android:layout_below="@id/tv_send_neck_name"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/divide_line"/>

            <TextView
                android:id="@+id/tv_mail_payload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_dl_1"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:maxLines="3"
                android:paddingBottom="8dp"
                android:text="时间会给我们真实的答案！时间会给我们真实的答案！"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_dl_2"
                android:layout_below="@id/tv_mail_payload"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/divide_line"/>

            <TextView
                android:layout_below="@id/view_dl_2"
                android:id="@+id/tv_mail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2023年3月11日 12:21"
                android:textColor="@color/title_black"
                android:textSize="11sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"/>




        </RelativeLayout>

    </LinearLayout>







</LinearLayout>