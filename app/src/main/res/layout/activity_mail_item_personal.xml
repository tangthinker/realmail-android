<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_text_white"
        android:orientation="vertical"
        android:elevation="8dp">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">


            <Button
                android:id="@+id/btn_go_back"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/arrow_left" />

            <RelativeLayout
                android:id="@+id/rl_collect_or_delete"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:background="@drawable/btn_blue_small"
                android:elevation="1dp">

                    <ImageView
                        android:id="@+id/iv_icon_collect_delete"
                        android:layout_toLeftOf="@id/tv_text_collect_or_delete"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/collect_icon_1"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_text_collect_or_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="14dp"
                        android:text="收藏"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_into_personal_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_head_icon"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/default_head_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_neck_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_head_icon"
                    android:text="喜欢吃干脆面的糖"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_flag_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RealMail ID: "
                    android:textColor="@color/colorTextGray"
                    android:layout_below="@id/tv_neck_name"
                    android:layout_toRightOf="@id/iv_head_icon"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shanliao"
                    android:textColor="@color/colorTextGray"
                    android:layout_below="@id/tv_neck_name"
                    android:layout_toRightOf="@id/tv_flag_user_id"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_flag_receiver_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接收人: "
                    android:textColor="@color/colorTextGray"
                    android:layout_below="@id/tv_flag_user_id"
                    android:layout_alignStart="@id/tv_flag_user_id"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv_receiver_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="king"
                    android:textColor="@color/colorTextGray"
                    android:layout_toRightOf="@id/tv_flag_receiver_user_id"
                    android:layout_below="@id/tv_flag_user_id"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_option_white"
                android:elevation="3dp">
                <TextView
                    android:id="@+id/tv_flag_mail_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mail ID: "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginVertical="5dp"/>

                <TextView
                    android:id="@+id/tv_mail_public_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_flag_mail_id"
                    android:text="202303000000001"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginVertical="5dp"/>



                <View
                    android:id="@+id/view_dl_1"
                    android:layout_below="@id/tv_flag_mail_id"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>



                <TextView
                    android:id="@+id/tv_mail_payload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/view_dl_1"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="24dp"
                    android:lineSpacingExtra="10dp"
                    android:text="时间会给我们答案！"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/view_dl_2"
                    android:layout_below="@id/tv_mail_payload"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>

                <TextView
                    android:layout_below="@id/view_dl_2"
                    android:id="@+id/tv_mail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2023年3月11日 12:21"
                    android:textColor="@color/title_black"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_reply_mail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_blue"
                android:elevation="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="回 复"
                    android:textColor="@color/bg_text_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_delete_mail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/btn_red"
                android:elevation="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="删除该邮件"
                    android:textColor="@color/bg_text_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="14dp"
                android:background="@drawable/bg_option_white"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:elevation="3dp">


                <TextView
                    android:id="@+id/tv_flag_comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:id="@+id/btn_add_comment"
                    android:layout_alignBottom="@id/tv_flag_comment_text"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_add_mail" />


                <View
                    android:id="@+id/view_dl_8"
                    android:layout_below="@id/tv_flag_comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>

                <RelativeLayout
                    android:id="@+id/rl_no_comment_flag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_dl_8"
                    android:layout_marginVertical="30dp">

                    <ImageView
                        android:id="@+id/iv_icon_no_comment"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/no_comment_img"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无评论..."
                        android:textColor="@color/title_black"
                        android:layout_below="@id/iv_icon_no_comment"
                        android:layout_marginTop="12dp"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>



                <work.tangthinker.realmail.special.AutoListView
                    android:layout_below="@id/view_dl_8"
                    android:layout_marginTop="10dp"
                    android:id="@+id/lv_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>